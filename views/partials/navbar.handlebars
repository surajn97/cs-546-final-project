{{#if login_signup_page}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top d-print-none">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">What's Cooking?</a>

  </div>
</nav>
{{else}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top d-print-none">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">What's Cooking?</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link {{#if recipes_page}}active{{/if}}" {{#if recipes_page}} aria-current="page" {{/if}} href="/recipes/all">Recipes</a>
        </li>
      </ul>
      <form id="navRecipeSearch" class="d-flex" method="POST" action="/recipes/all">
        <label for="navRecipeSearchInput" hidden>Search</label>
        <input
           id="navRecipeSearchInput"
          class="form-control me-2"
          type="search"
          placeholder="Search Recipes"
          aria-label="Search Recipes"
          name="search"
        />
        <button
          class="btn btn-outline-light me-3" 
          type="submit"
        >Search</button>
      </form>
      {{#if authenticated}}
      <a href="/private" class="btn btn-primary me-3" role="button"><i class="fas fa-user"></i> {{session.user.firstname}}</a>
      <a href="/users/logout" class="btn btn-danger" role="button">Logout</a> 
      {{else}}
      <a href="/users/login" class="btn btn-primary" role="button">Login</a>
      {{/if}}

    </div>
  </div>
</nav>
{{/if}}