<div class="container m-4 p4-4">
    <h1>{{title}}</h1>
<form method="POST" id="recipe-form" action="/recipes/submit/{{ids}}">
<div class="input-group">
    <div class="input-group-prepend">
        <label class="input-group-text" for="name">Recipe Name</label>
    </div>
    <input type="text" name="name" id="name" class="form-control" placeholder="Recipe Name" value={{data.name}} required>
</div>
</br>  

<div class="input-group">
    <div class="input-group-prepend">
        <label class="input-group-text" for="cookingTime">Cooking Time</label>
    </div>
    <input type="number" name="cookingTime" id="cookingTime" class="form-control" placeholder="Cooking Time" value={{data.cookingTime}} required>
    <div class="input-group-prepend">
        <label class="input-group-text" for="servings">Servings</label>
    </div>
    <input class="form-control" type="text" name="servings" id="servings" placeholder="servings" value={{data.servings}} required/>
</div>

</br>

<div class="input-group">
    <div class="input-group-prepend">
        <label class="input-group-text" for="ingName">Add Ingredients:</label>
    </div>
    <input type="text" class="form-control" id="ingName" name="ingName" placeholder="Ingredient Name">
    <div class="input-group-append">    
        <input type="Number" class="form-control" id="quantity" name="quantity" placeholder="Quantity" required>
    </div>

    <div class="input-group-append">
        <select class="form-control" name="qMeasure" id="qMeasure" required>
            
            <option value="teaspoon" selected>Teaspoons</option>
            <option value="grams">Grams</option>
            <option value="cup">Cup</option>
            <option value="tablespoon">Tablespoons</option>
            <option value="bowl">Bowl</option>
            <option value="qty" selected>Quantity</option>
            <option value="ml">Milliliters</option>
        </select>
    </div>

    <div class="input-group-append">
        <button class="btn btn-outline-secondary" id="addIng" name="addIng" type="button">Add</button>
    </div>
</div>
</br>

<div id="showDiv">
    <input type="text" class="form-control" name="mealtypestore" id="mealtypestore" value={{data.mealType}} hidden/>
    <input type="text" class="form-control" name="ingredients" id="ingredients" placeholder="Just to store object value"  value={{ingArr}} hidden/>
    <p>Ingredients Added:</p>
</div>
</br>

<div class="input-group">

    <div class="input-group-prepend">
        <label class="input-group-text" for="Mealtype">Meal type</label>
    </div>
    <select class="form-control" name="mealType" id="mealType" value={{data.mealType}} required>
    <option value="Breakfast">Breakfast</option>
    <option value="Brunch">Brunch</option>
    <option value="Lunch">Lunch</option>
    <option value="Snack">Snack</option>
    <option value="Dinner">Dinner</option>
    </select>
    <div class="input-group-prepend">
        <label class="input-group-text" for="cuisine">Cuisine</label>
    </div>
    <input class="form-control" type="text" name="cuisine" id="cuisine" value={{data.cuisine}} placeholder="cuisine"/>
</div>
</br>

<div class="input-group">
    <div class="input-group-prepend">
        <label class="input-group-text" for="instructions">Instructions</label>
    </div>
    <textarea class="form-control" name="instructions" id="instructions" placeholder="Instructions">{{data.instructions}}</textarea>
</div>
</br>

<div class="input-group">
    <button class="btn btn-outline-secondary" id="button" type="submit">Submit</button>
</div>
    

</form>
{{#if error}}
<div id="errors" class="alert alert-primary" role="alert">
  {{error}}
</div>
{{/if}}
</div>
<script src="/public/js/editrecipe.js"></script>