<div class="container-fluid">
  <div class="row">
    <div class="col">
    {{>usersidebar}}
    </div>
    <div class="col-9 p-2 ms-4">
        <h1>My Reviews:</h1>
        <div class="container">
            {{#if hasReview}}
            <ul class="list-group list-group-flush">
                {{#each myReviews}}
                <li class="list-group-item">
                    <a href="/recipes/{{this.recipeid}}"><span class="mr-2">&starf;</span>{{this.recipename}} </a>
                    <p>rate: {{this.rating}} Your review: {{this.reviewText}} </p>
                </li>
                {{/each}}
            </ul>

            {{else}}
            <p class="font-italic">No Reviews posted yet.</p>
            {{/if}}
        </div>
    </div>
  </div>
</div>