<div class="mt-4 text-center">
  <h1 class="display-1">Login</h1>  
    <p>enter the username and password to login:</p>
    {{#if error}}
    <p class="error">{{error}}</p>
    {{/if}}
    <form class="mb-3" action="/users/login" method="POST" id="login-form">
      <label for="username">username: </label>
      <input type="text" id="username" name="username" value="{{username}}">
      <br>
      <label for="password" >password: </label>
      <input type="password" id="password" name="password" value="{{password}}">
      <br>
          <div class="invalid-feedback mb-3">
            Username cannot be empty,and passsword has at least 6 characters without spaces.
        </div>
      <button type="submit" id="login">Login</button>
    </form>
  <br>
  <p>Need to register? Click here to sign-up</p>
  <a href="/users/signup">SignUp</a>
</div>
    <script src="/public/js/login.js"></script>
