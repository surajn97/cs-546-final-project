<div class="mt-4 text-center">
  <h1>Sign Up</h1>
    <p>enter the username and password to sign up:</p>
    {{#if error}}
    <p class="error">{{error}}</p>
    {{/if}}
    <form action="/users/signup" method="POST" id="signup-form" >
      <label for="username" >username: </label>
      <input type="text" id="username" name="username" value="{{username}}">
   
      <br>
      <label for="password" >password: </label>
      <input type="password" id="password" name="password" value="{{password}}">
    
      <br>
      <label for="firstname" >firstname: </label>
      <input type="text" id="firstname" name="firstname" value="{{firstname}}">
    
      <br>
      <label for="lastname" >lastname: </label>
      <input type="text" id="lastname" name="lastname" value="{{lastname}}">
        
      <br>
      <label for="email" >email: </label>
      <input type="email" id="email" name="email" value="{{email}}">
        
      <br>
      <label for="age" >age: </label>
      <input type="number" id="age" name="age" value="{{age}}">
        
      <br> 
      <div class="invalid-feedback mb-3">
            You must fill in all of the fields, and passsword has at least 6 characters without spaces.
      </div>
      <button type="submit" id="signup">Sign Up</button>
    </form>
  <br>
  <p>Already have an account? Click here to log-in</p>
   <a href="/users/login">Log In</a>
</div>    <script src="/public/js/signup.js"></script>
