


<head>
    <meta charset="utf-8">
    <title>User Profile:</title>
    <link rel="stylesheet" href="/public/css/main.css">
</head>

<body>
    <h1>User Profile:</h1>
    <main>
        <p>username:   {{username}}<p>
        <p>first name: {{firstname}}<p>
        <p>last name:  {{lastname}}<p>
        <p>email:      {{email}}<p>
        <p>age:      {{age}}<p>
    <h2>Favorited Recipes:</h2>
 <div class="container">
                    {{#if hasFRecipe}}
                    <ul class = "list-group col-10 list-group-flush">  
                        {{#each myFavRecipe}}
                            <li class = "list-group-item">
                                <a href = "/recipe/{{this.id}}"><span class="mr-2">&starf;</span>{{this.name}}</a>
                            </li>
                        {{/each}}
                        </ul>
                       
                    {{else}}
                         <p class = "font-italic">No favorite recipes.</p>
                    {{/if}}
                </div>
    <h2>My Recipes:</h2>
     <div class="container">
                    {{#if hasMRecipe}}
                    <ul class = "list-group col-10 list-group-flush">  
                        {{#each myRecipes}}
                            <li class = "list-group-item">
                                <a href = "/recipe/{{this.id}}"><span class="mr-2">&starf;</span>{{this.name}}</a>
                            </li>
                        {{/each}}
                        </ul>
                       
                    {{else}}
                         <p class = "font-italic">No recipes posted yet.</p>
                    {{/if}}
                </div>
    <h2>My Reviews:</h2>
     <div class="container">
                    {{#if hasReview}}
                    <ul class = "list-group col-10 list-group-flush">  
                        {{#each myReviews}}
                            <li class = "list-group-item">
                                <a href = "/recipe/{{this.id}}"><span class="mr-2">&starf;</span>{{this.recipename}}</a>
                            </li>
                        {{/each}}
                        </ul>
                       
                    {{else}}
                         <p class = "font-italic">No Reviews posted yet.</p>
                    {{/if}}
                </div>

    </main>
    <a href="users/logout">logout</a>
</body>